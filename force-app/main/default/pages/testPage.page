<apex:page showHeader="false" sidebar="false">
    <style>
        #customers {
          font-family: Arial, Helvetica, sans-serif;
          border-collapse: collapse;
          width: 100%;
        }
        
        #customers td, #customers th {
          border: 1px solid #ddd;
          padding: 8px;
          width: 100px;
        }
        
        #customers tr:nth-child(even){background-color: #f2f2f2;}
        
        #customers tr:hover {background-color: #ddd;}
        
        #customers th {
          padding-top: 12px;
          padding-bottom: 12px;
          text-align: left;
          background-color: #04AA6D;
          color: white;
        }
    </style>
<h1>Approval History</h1>
<table border="1px" id="customers">
    <tr>
        <th>Step Name</th>
        <th>Date</th>
        <th>Status</th>
        <th>Assigned To</th>
    </tr> 
</table>
<c:approvalHistorycmp var="0012v00003FspgV" approval="app">
   
    <apex:repeat value="{!app.listOfSteps}" var="listOfSteps">
         
        <apex:repeat value="{!listOfSteps}" var="step">
            <table  border="1px" id="customers">
            <tr>
                <td><apex:outputText value="{!step.actorName} : {!step.}"></apex:outputText></td>
                <td><apex:outputText value="{!step.createdDate} {!step.createdTime}"></apex:outputText></td>
                <td>
                    <apex:outputText value="Approve" rendered="{!step.status_approve}"></apex:outputText>
                    <apex:outputText value="Pending" rendered="{!step.status_pending}"></apex:outputText>
                    <apex:outputText value="Reject" rendered="{!step.status_reject}"></apex:outputText>
                    <apex:outputText value="Start" rendered="{!step.status_start}"></apex:outputText>
                </td>
                <td><apex:outputText value="{!step.assignedTo}"></apex:outputText></td>
            </tr>
        </table>
        </apex:repeat>
    </apex:repeat>
</c:approvalHistorycmp>
</apex:page>